<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#genreModal">
  Agregar Genero
</button>

<!-- Modal Genero -->
<div class="modal fade" id="genreModal" tabindex="-1" aria-labelledby="genreModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="genreModalLabel">Crear Genero</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="modal-body">

          <form action="/genre/create" method="POST">
            <div class="col-md-6 mb-4">
              <label for="genre_name" class="form-label">Nombre del Genero</label>
              <input type="text" class="form-control" id="genre_name" name="genre_name" placeholder="Ingrese un Genero" required>
            </div>
  
            <button type="submit" class="btn btn-success">Crear</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
          </form>

        </div>
      </div>
    </div>
  </div>
