<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
</head>
    <body>
        <div>
            <h1>Listado de Productos Disponibles</h1>
            <ul>
                <% products.forEach(product => { %>
                    <p> <%= product.product_name %> <%= product.country %> <%= product.product_format %> </p>           
                
                    <form action="/product/detail/<%= product.id_product %>" method="POST">
                        <label for="detail"></label>
                        <button id="<%= product.id_product %>" type="submit" name="detail">Ver Detallado</button>
                    </form>

                    <form action="/edit" method="POST">
                        <label for="edit"></label>
                        <button id="<%= product.id_product %>" type="submit" name="edit">Editar</button>
                    </form>
                    
                    <form action="/erase" method="POST">
                        <label for="erase"></label>
                        <button id="<%= product.id_product %>" type="submit" name="erase">Borrar</button>
                    </form>

                <% }); %>
            </ul>

            <a href="/product/add">Agregar Nuevo Producto</a>

        </div>
    </body>
</html>