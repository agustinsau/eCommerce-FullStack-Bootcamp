<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/header') %>

<body>
    <div class="form-container">
        <h2>Modificar Producto: <%= product.product_name %> </h2>
        <form action="/product/update/<%= product.id_product %>?_method=PUT" method="POST">

            <label for="name">Nombre del Producto: </label>
            <input type="text"  id="name" name="name" value="<%= product.product_name %>" required>
        
            <label for="label">Sello Discografico: </label>
            <input type="text"  id="label" name="label" value="<%= product.label %>" required>
        
            <label for="format">Formato de Producto: </label>
            <input type="text"  id="format" name="format" value="<%= product.product_format %>" required>
        
            <label for="country">Pais Lanzamiento: </label>
            <input type="text"  id="country" name="country" value="<%=  product.country %>" required>
        
            <label for="released">Fecha lanzamiento: </label>
            <input type="number"  id="released" name="released" value="<%= product.released %>" required>

            <label for="price">Precio: </label>
            <input type="text" pattern="\d+(\.\d{1,2})?" id="price" name="price" value="<%= product.price %>" required>
        
            <label for="genre">GÃ©nero:</label>
            <select name="genre" id="genre" required>
                <% genres.forEach(genre => { %>
                    <option value="<%= genre.id_genre %>" <% if (genre.id_genre == product.genre_fk) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                <% }); %>
            </select>

            <select name="artist" id="artist" required>
                <% artists.forEach(artist => { %>
                    <option value="<%= artist.id_artist %>" <% if (artist.id_artist == product.artist_fk) { %><%= 'selected' %><% }; %>><%= artist.name %></option>
                <% }); %>
            </select>
        
            <button type="submit">Modificar Producto</button>
            
        </form>
    </div>

    <%- include ('./partials/footer') %>

</body>

</html>