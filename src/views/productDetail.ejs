<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/header') %>

  <body>
      <div class="container">
      
        <section class="prod-detail-sect">
          <!-- Carrusel de imágenes del producto-->
          <div id="itemCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active prod-detail-car">
                <img src="/images/rust2.jpg" class="d-block w-100" alt="Imagen 1">
              </div>
              <div class="carousel-item prod-detail-car">
                <img src="/images/rust1.jpg" class="d-block w-100" alt="Imagen 2">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#itemCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#itemCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Siguiente</span>
            </button>
          </div>
        </section>
        
        <section class="text-center my-3">      
          <h1 class="item-name"><%= product.product_name %></h1>
          <p><%= product.product_format %></p>
          <p class="item-price fs-4">$<%= product.price %></span></p>
          <button class="btn btn-primary me-2">Agregar al Carrito</button>
          <button class="btn btn-success ">Comprar Ahora</button> 
        </section>

        <article class="d-flex justify-content-evenly mt-5">  
          <section class="py-2">
            <h2 class="mb-2">Detalles del Artículo</h2>
            <table class="table prod-specs">
              <tbody>
                <tr>
                  <td>Artista</td>
                  <td><%= product.artist.name %></td>
                </tr>
                <tr>
                  <td>País de Lanzamiento</td>
                  <td><%= product.country %></td>
                </tr>
                <tr>
                  <td>Fecha de Lanzamiento</td>
                  <td><%= product.released %></td>
                </tr>
                <tr>
                  <td>Género Musical</td>
                  <td><%= product.genre.name %></td>
                </tr>
                <tr>
                  <td>Sello Discográfico</td>
                  <td><%= product.label %></td>
                </tr>
              </tbody>
            </table>
          </section>  

          <section class="py-2">
            <h2>Características del Artículo</h2>
            <table class="table prod-specs">
              <tbody>
                <tr>
                  <td><div>Formato del Producto</div></td>
                  <td><div><%= product.product_format %></div></td>
                </tr>
                <tr>
                  <td><div>Stock</div></td>
                  <td><div>676</div></td>
                </tr>
              </tbody>
            </table>
          </section>                   
        </article>
        
        <section class="py-2">
          <h2>Opiniones de los Usuarios</h2>
          <div class="review-summary d-flex align-items-center mb-3">
            <span class="rating-stars fs-4 text-warning">★★★★☆</span>
            <span class="rating-average ms-2 fs-5">4.5 de 5</span>
          </div>
          <div class="reviews-list">
            <div class="review mb-2">
              <p><strong>Usuario 1:</strong> Excelente artículo </p>
            </div>
            <div class="review mb-2">
              <p><strong>Usuario 2:</strong> Muy satisfecho. Buen producto </p>
            </div>     
          </div>
          <button class="btn btn-secondary">Agregar Reseña</button>
        </section>

        <section class="py-5">
          <h2>Opciones Admin Para el Producto</h2>
          <div class="d-flex">
            <form action="/product/edit/<%= product.id_product %>" method="GET">
                <label for="update"></label>
                <button class="btn btn-warning" id="<%= product.id_product %>" type="submit" name="update">Modificar</button>
            </form>
              
            <form action="/product/delete/<%= product.id_product %>" method="GET">
                <label for="delete"></label>
                <button class="btn btn-danger" id="<%= product.id_product %>" type="submit" name="delete">Borrar</button>
            </form> 
          </div>       
        </section>

    </div>
    
    <!-- <%- include ('./partials/footer') %> -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  </body>
</html>